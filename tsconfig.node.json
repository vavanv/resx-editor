{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "outDir": "dist/main",
    "rootDir": "src/main",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "noEmit": false,
    "resolveJsonModule": true
  },
  "include": ["src/main/**/*.ts"],
  "exclude": ["node_modules"]
}
